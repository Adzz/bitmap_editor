#!/usr/bin/env ruby
require './lib/batch_runner'


puts "===================================="
puts "||   \\                       /    ||"
puts "|| -         Get Ready...       -  ||"
puts "||   /                       \\    ||"
puts "===================================="
puts "            ||     ||               "
puts "            ||     ||               "
sleep(1)
puts "===================================="
puts "||   \\                       /    ||"
puts "|| -        ...to be...         -  ||"
puts "||   /                       \\    ||"
puts "===================================="
puts "            ||     ||               "
puts "            ||     ||               "
sleep(2)
puts "===================================="
puts "||   \\                       /    ||"
puts "|| -       A M A Z E D !        -  ||"
puts "||   /                       \\    ||"
puts "===================================="
puts "            ||     ||"
puts "            ||     ||"
puts
sleep(1)
puts
puts "===================================="
puts "||   \\                       /    ||"
puts "|| -   B I T M A P S   W O W   -  ||"
puts "||   /                       \\    ||"
puts "===================================="
puts "            ||     ||             "
puts "            ||     ||             "
puts "            ||     ||             "
puts "            ----------            "
puts "        ----          ----        "
puts "    ----                  ----    "
puts "-----                        -----"
puts
puts
sleep(1)

begin
  BatchRunner.new(ARGV.first).run
rescue StandardError => e
  puts e
end
